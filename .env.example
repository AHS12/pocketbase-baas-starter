# PocketBase Configuration
# Copy this file to .env and update the values as needed

# App Configuration
APP_NAME=IMS_PocketBase_App
APP_URL=http://localhost:8090

# Logs Configuration
LOGS_MAX_DAYS=7

# Cron Configurations
ENABLE_SYSTEM_QUEUE_CRON=true
# jobs Configuration
JOB_MAX_WORKERS=5
JOB_BATCH_SIZE=50
JOB_MAX_RETRIES=3
JOB_RESERVATION_TIMEOUT=5 #5 minutes

# Export Configuration
EXPORT_FILE_EXPIRATION_DAYS=1

# SMTP Configuration (for email notifications)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_AUTH_METHOD=PLAIN
SMTP_TLS=true

# S3 Configuration (for file storage)
S3_ENABLED=false
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET=your-secret-key

# Batch Processing Configuration
BATCH_ENABLED=true
BATCH_MAX_REQUESTS=100

# Rate Limiting Configuration
RATE_LIMITS_ENABLED=true
RATE_LIMITS_MAX_HITS=120
RATE_LIMITS_DURATION=60

# Encryption Key (required for production)
PB_ENCRYPTION_KEY=your-32-char-encryption-key-here 